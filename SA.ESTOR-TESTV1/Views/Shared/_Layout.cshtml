<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SA.ESTOR_TESTV1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SA.ESTOR_TESTV1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img id="logo" src="/Products-Images/logo-1.png" alt="Avatar Logo" style="width:120px;" class="rounded-pill">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Products" asp-action="HomeIndex">Used Products</a>
                        </li>
                        @if (User.IsInRole("Adminplus")){
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Products" asp-action="Index"> Edit Used Products</a>
                            </li>
                        }
                        @if (User.IsInRole("Adminplus"))
                        {
                            <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="HandMProducts" asp-action="Index">Edit HandMade Products</a>
                        </li>
                        }
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="HandMProducts" asp-action="HMProducts">(HandMade Products)</a>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
       
    </footer>

    <footer class="footer bg-light text-center fixed-bottom">
        <div class="container">
            <div class="row mt-3">
                <div class="col-xl-3"></div>
                <div class="col-xl-3"><button class="btn btn-outline-info"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></button></div>
                <div class="col-xl-3"><button class="btn btn-outline-info"><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></button></div>
            </div>
            
            &copy; 2024 - EStor_UsedItems - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
